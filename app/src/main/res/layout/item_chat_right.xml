<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp">

    <TextView
        android:id="@+id/tv_chat_right_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:textAppearance="@style/TextAppearance.Carrot.Detail2"
        android:textColor="@color/gray_3"
        app:layout_constraintBottom_toTopOf="@id/layout_chat_right_announcement"
        app:layout_constraintEnd_toStartOf="@+id/tv_chat_right_text"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="오후 6:18" />

    <TextView
        android:id="@+id/tv_chat_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@drawable/shape_orange_fill_20_rect"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:textAppearance="@style/TextAppearance.Carrot.Body5"
        android:textColor="@color/white"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/layout_chat_right_announcement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_chat_right_time"
        tools:text="45분까지 광흥창역 1번출구로 갈게요!" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_chat_right_announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_item_chat_right_announcement_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_light_skyblue_11_rect"
            android:paddingHorizontal="20dp"
            android:paddingVertical="19dp"
            android:textAppearance="@style/TextAppearance.Carrot.Body5"
            android:textColor="@color/blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="안내 마포아씨님과 거래 예약을 했어요. 당근페이에 가입하면 간편하게 송금할 수 있어요. 자세히 보기" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>