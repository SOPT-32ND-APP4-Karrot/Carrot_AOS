<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp">

    <TextView
        android:id="@+id/tv_chat_right_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:textAppearance="@style/TextAppearance.Carrot.Detail2"
        android:textColor="@color/gray_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_chat_right_text"
        tools:text="오후 6:18" />

    <TextView
        android:id="@+id/tv_chat_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@drawable/shape_orange_fill_20_rect"
        android:paddingHorizontal="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"
        android:textAppearance="@style/TextAppearance.Carrot.Body5"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="45분까지 광흥창역 1번출구로 갈게요!" />

</androidx.constraintlayout.widget.ConstraintLayout>